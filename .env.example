# ================================
# 环境变量配置示例
# 请复制此文件为 .env.local 并填入真实值
# ================================

# 腾讯云 MySQL 数据库
DATABASE_URL="mysql://username:password@localhost:3306/medical_aesthetic_db"

# 腾讯云 COS 对象存储
COS_SECRET_ID="your-tencent-cloud-secret-id"
COS_SECRET_KEY="your-tencent-cloud-secret-key"
COS_BUCKET="your-bucket-name"
COS_REGION="ap-guangzhou"
COS_DOMAIN="https://your-bucket-name.cos.ap-guangzhou.myqcloud.com"

# Dify API (AI 逻辑处理)
DIFY_API_KEY="your-dify-api-key"
DIFY_API_URL="https://api.dify.ai/v1"

# Replicate API (AI 图片生成)
REPLICATE_API_TOKEN="your-replicate-api-token"

# 应用配置
NEXT_PUBLIC_APP_URL="http://localhost:3000"
